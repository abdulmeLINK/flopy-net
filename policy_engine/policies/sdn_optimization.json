{
  "policy_id": "sdn_opt_002",
  "name": "Bandwidth Optimization for Training",
  "description": "Increase bandwidth allocation during high traffic FL training phases",
  "conditions": [
    {
      "field": "training_phase",
      "operator": "==",
      "value": "aggregation"
    },
    {
      "field": "network_load",
      "operator": ">",
      "value": 75
    }
  ],
  "actions": [
    {
      "type": "sdn",
      "target": "allocate_bandwidth",
      "parameters": {
        "priority": "high",
        "min_bandwidth_mbps": 100,
        "duration_seconds": 300
      }
    },
    {
      "type": "sdn",
      "target": "prioritize_traffic",
      "parameters": {
        "source_type": "edge_node",
        "destination_type": "aggregation_server",
        "protocol": "TCP"
      }
    }
  ],
  "priority": 30,
  "enabled": true,
  "tags": ["networking", "optimization", "bandwidth"]
} 