{
  "policy_id": "security_001",
  "name": "FL Anomaly Detection and Mitigation",
  "description": "Detect and respond to anomalous behavior in FL clients",
  "conditions": [
    {
      "field": "anomaly_score",
      "operator": ">",
      "value": 0.8
    }
  ],
  "actions": [
    {
      "type": "fl",
      "target": "blacklist_client",
      "parameters": {
        "duration_minutes": 30,
        "reason": "anomalous_behavior",
        "notify_admin": true
      }
    },
    {
      "type": "sdn",
      "target": "isolate_node",
      "parameters": {
        "duration_minutes": 15,
        "traffic_type": "fl_only"
      }
    },
    {
      "type": "fl",
      "target": "model_defense",
      "parameters": {
        "clip_gradients": true,
        "max_gradient_norm": 1.0,
        "add_noise": true,
        "noise_scale": 0.01
      }
    }
  ],
  "priority": 100,
  "enabled": true,
  "tags": ["security", "anomaly_detection", "mitigation"]
} 